<fest:template xmlns:fest="http://fest.mail.ru">
    <div id="register" class="b-page">
        <div class="b-page__header g-center" id="header">
            <h2>Register</h2>
        </div>
        <form class="b-form__row" id="register-form">
            <div class="b-row">
                <div class="input-field b-form__row">
                    <p>Email</p>
                    <input id="email-input" type="email" class="validate"
                           required="" aria-required="true" placeholder="example@email.com"/>
                </div>
            </div>
            <div class="row">
                <div class="input-field b-form__row">
                    <p>Password</p>
                    <input id="password-input" type="password" class="validate"
                           required="" aria-required="true"/>

                </div>
            </div>
            <div class="b-row">
                <button class="b-button g-float-left" type="submit" id="register-input">
                    Register
                </button>
                <a class="b-button g-float-right" id="main" href="#">Main menu</a>
            </div>
        </form>
    </div>
</fest:template>
